<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="#f9f9f9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <you.xiaochen.wheel.widget.WheelView
            android:tag="yearWheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-30dp"
            app:wheelItemCount="3"
            app:wheelItemSize="36dp"
            app:wheelDividerSize="30dp"
            app:wheelGravity="left"
            app:dividerColor="#eeeeee"
            app:wheelTextSize="18sp"
            app:wheelTextColor="#999999"
            app:wheelTextColorCenter="#666666"/>
        <you.xiaochen.wheel.widget.WheelView
            android:tag="monthWheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-30dp"
            app:wheelItemCount="3"
            app:wheelItemSize="36dp"
            app:wheelDividerSize="30dp"
            app:wheelGravity="center"
            app:dividerColor="#eeeeee"
            app:wheelTextSize="18sp"
            app:wheelTextColor="#999999"
            app:wheelTextColorCenter="#666666"/>
        <you.xiaochen.wheel.widget.WheelView
            android:tag="dayWheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-30dp"
            app:wheelItemCount="3"
            app:wheelItemSize="36dp"
            app:wheelDividerSize="30dp"
            app:wheelGravity="right"
            app:dividerColor="#eeeeee"
            app:wheelTextSize="18sp"
            app:wheelTextColor="#999999"
            app:wheelTextColorCenter="#666666"/>
    </LinearLayout>
    <TextView
        android:tag="done"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textColor="#666666"
        android:textSize="16sp"
        android:text="完成"/>
</LinearLayout>